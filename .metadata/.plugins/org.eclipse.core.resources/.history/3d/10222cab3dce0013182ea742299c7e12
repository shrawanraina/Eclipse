package learn.java;

import java.util.Stack;

public class reverseStringWord {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str = "Hello how are you";
		_reverseStrWord(str);
	}
	
	public static void _reverseStrWord(String str){
		System.out.println(str);
		str = _reverseStr(str);
		System.out.println(str);
	}
	
	public static String _reverseStr(String str){
		if(str.length() <=1){
			return str;
		}
		return _reverseStr(str.substring(1,str.length()-1))+str.charAt(0);
	}
	
	public static char[] _reverseArray(char[] input, int i, int j){
		char temp;
		while(i<=j){
			temp = input[i];
			input[i] = input[j];
			input[j] = temp;
			i++;
			j--;
		}
		return input;
	}
	
	public static void _reverseStrWordStack(String str){
		String input[] = str.split(" ");
		Stack<String> stck = new Stack<String>();
		for(int i=0; i<input.length; i++){
			stck.add(input[i]);
		}
		while(!stck.empty()){
			System.out.print(stck.pop());
		}
	}
}
