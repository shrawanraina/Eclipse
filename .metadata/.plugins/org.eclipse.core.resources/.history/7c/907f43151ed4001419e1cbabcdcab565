		//System.out.println(strArr);
	}
	
	private static String _reverseCharArray(char[] strArr, int start, int end) {
		// TODO Auto-generated method stub
		while(start < end){
			char temp = strArr[start];
			strArr[start] = strArr[end];
			strArr[end] = temp;
			//System.out.println(strArr[start]+" "+strArr[end]+" "+temp);
			start++;
			end--;
		}
		return new String(strArr);
	}
	
	private static String _reverseString1(String str) {
		// TODO Auto-generated method stub
		if(str == null || str.length() <=1)
			return null;
		char[] strArr  = str.toCharArray();
		char temp;
		int length = strArr.length - 1;
		for(int i = 0; i < length; ++i){
			temp = strArr[i];
			strArr[i] = strArr[length];
			strArr[length--] = temp;
		}
		return new String(strArr);
	}
	
	private static String _reverseString2(String input){
		if(input.length() <= 1)
			return input;
		char[] inpArr = input.toCharArray();
		int i=0;
		int j=inpArr.length-1;
		char temp;
		while(i<j){
			temp = inpArr[i];
			inpArr[i] = inpArr[j];
			inpArr[j] = temp;
			i++;
			--j;
		}
		return new String(inpArr);
	}
	
	
	
	
	
}
