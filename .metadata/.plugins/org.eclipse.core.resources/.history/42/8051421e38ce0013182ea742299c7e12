package learn.java;

import java.util.Stack;

public class reverseStringWord {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str = "Hello";
		_reverseStrWord(str);
	}
	
	public static void _reverseStrWord(String str){
		char[] input = str.toCharArray();
		System.out.println(_reverse(input,0,input.length-1));
		
	}
	
	public static char[] _reverse(char[] input, int i, int j){
		char temp;
		while(i<=j){
			temp = input[i];
			input[i] = input[j];
			input[j] = temp;
			i++;
			j--;
		}
		return input;
	}
	
	public static void _reverseStrWordStack(String str){
		String input[] = str.split(" ");
		Stack<String> stck = new Stack<String>();
		for(int i=0; i<input.length; i++){
			stck.add(input[i]);
		}
		while(!stck.empty()){
			System.out.print(stck.pop());
		}
	}
}
